<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_judul_kertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="KERTAS"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_judul_gunting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUNTING"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_kertas" />

    <TextView
        android:id="@+id/tv_judul_batu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BATU"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_gunting" />

    <TextView
        android:id="@+id/tv_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="PEMAIN 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_batu" />

    <ImageView
        android:id="@+id/img_batu_player"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/batu"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_player" />

    <ImageView
        android:id="@+id/img_kertas_player"
        android:layout_width="96dp"
        android:layout_height="84dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/kertas"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_batu_player" />

    <ImageView
        android:id="@+id/img_gunting_player"
        android:layout_width="96dp"
        android:layout_height="84dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/gunting"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_kertas_player" />

    <TextView
        android:id="@+id/tv_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="30dp"
        android:text="COM"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_batu" />

    <ImageView
        android:id="@+id/img_batu_com"
        android:layout_width="96dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/ic_batu"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_com" />

    <ImageView
        android:id="@+id/img_kertas_com"
        android:layout_width="96dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/ic_kertas"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_batu_com" />

    <ImageView
        android:id="@+id/img_gunting_com"
        android:layout_width="96dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/ic_gunting"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_kertas_com" />



    <ImageView
        android:id="@+id/img_refresh"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_refresh" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        app:layout_constraintBottom_toBottomOf="@+id/img_kertas_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_kertas_player" />

    <TextView
        android:id="@+id/tv_p1choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P1 = ..."
        app:layout_constraintEnd_toEndOf="@+id/tv_status"
        app:layout_constraintStart_toStartOf="@+id/tv_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_status" />

    <TextView
        android:id="@+id/tv_comchoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COM = ..."
        app:layout_constraintEnd_toEndOf="@+id/tv_status"
        app:layout_constraintStart_toStartOf="@+id/tv_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_p1choice" />

</androidx.constraintlayout.widget.ConstraintLayout>